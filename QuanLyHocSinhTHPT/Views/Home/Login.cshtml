@model QuanLyHocSinhTHPT.Models.NGUOIDUNG

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<link rel="stylesheet" href="@Url.Content("~/Content/css/login.css")">*@
    <link href="~/Content/css/login.css" rel="stylesheet" />

    <title>Login</title>
</head>

<body>

    <div class="container">
        <div class="form">
            <h1>ĐĂNG NHẬP</h1>
            @using (Html.BeginForm("Login", "Home", new { returnURL = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="inputBox">
                    @Html.TextBoxFor(model => model.TENDANGNHAP, htmlAttributes: new { @placeholder = "Tài Khoản" })
                    @Html.ValidationMessageFor(model => model.TENDANGNHAP, "", new { @class = "text-danger" })
                </div>

                <div class="inputBox">
                    @Html.TextBoxFor(model => model.MATKHAU, htmlAttributes: new { @placeholder = "Mật khẩu", @type = "password" })
                    @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
                </div>

                <div class="inputBox">
                    <input type="submit" value="login">
                </div>
                <a href="#">Quên mật khẩu</a>
            }
        </div>
    </div>
</body>
</html>