@model QuanLyHocSinhTHPT.Models.GIAOVIEN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h1>GIÁO VIÊN</h1>
        @Html.ValidationSummary(true, "", new { @style = "color:red;display: inline-block;padding-left: 150px; !important" })
        @Html.HiddenFor(model => model.MAGIAOVIEN)
        <div class="form-group">
            @Html.LabelFor(model => model.TENGIAOVIEN)
            @Html.EditorFor(model => model.TENGIAOVIEN, new { @type = "text" })
            @Html.ValidationMessageFor(model => model.TENGIAOVIEN, "", new { @style = "color:red;display: inline-block;padding-left: 150px; !important" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MAGIOITINH, "Giới tính")
            @Html.DropDownList("MAGIOITINH", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MAGIOITINH, "", new { @style = "color:red;display: inline-block;padding-left: 150px; !important" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DIACHI)
            @Html.EditorFor(model => model.DIACHI, new { @type = "text" })
            @Html.ValidationMessageFor(model => model.DIACHI, "", new { @style = "color:red;display: inline-block;padding-left: 150px; !important" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DIENTHOAI)
            @Html.EditorFor(model => model.DIENTHOAI, new { htmlAttributes = new { @type = "number", @min = "0", @step = "1", @value = "0", @style = "width: 350px;float: right;padding: 5px 0; " } })
            @Html.ValidationMessageFor(model => model.DIENTHOAI, "", new { @style = "color:red;display: inline-block;padding-left: 150px; !important" })
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.MAMONHOC, "Môn học")
            @Html.DropDownList("MAMONHOC", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MAMONHOC, "", new { @style = "color:red;display: inline-block;padding-left: 150px; !important" })
        </div>
        <div class="clr"></div>
        <div class="form-group action">
            <input type="submit" value="Sửa" class="btn btn-default" />
            <a href="@Url.Action("Index")"><i class="fas fa-backward"></i> Quay lại</a>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript" src="../Scripts/js/main.js"></script>
}

