@model QuanLyHocSinhTHPT.Models.PHANCONG

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h1>PHÂN CÔNG</h1>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MANAMHOC, "Năm học")
            @Html.DropDownList("MANAMHOC", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MANAMHOC, "", new { @style = "color:red;display: inline-block;padding-left: 150px; !important" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MALOP, "Lớp")
            @Html.DropDownList("MALOP", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MALOP, "", new { @style = "color:red;display: inline-block;padding-left: 150px; !important" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MAMONHOC, "Môn học")
            @Html.DropDownList("MAMONHOC", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MAMONHOC, "", new { @style = "color:red;display: inline-block;padding-left: 150px; !important" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MAGIAOVIEN, "Giáo viên")
            @Html.DropDownList("MAGIAOVIEN", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MAGIAOVIEN, "", new { @style = "color:red;display: inline-block;padding-left: 150px; !important" })
        </div>
        <div class="clr"></div>
        <div class="form-group action">
            <input type="submit" value="Tạo" class="btn btn-default" />
            <a href="@Url.Action("Index")"><i class="fas fa-backward"></i> Quay lại</a>
        </div>
    </div>
}


